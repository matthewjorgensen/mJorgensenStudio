<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(hero_image) -%>">
  <span class='title'>
    <%= hero_image.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.hero_images_hero_image_path(hero_image),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_hero_images_admin_hero_image_path(hero_image),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.hero_images_admin_hero_image_path(hero_image),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => hero_image.title),
        :method => :delete %>
  </span>
</li>
