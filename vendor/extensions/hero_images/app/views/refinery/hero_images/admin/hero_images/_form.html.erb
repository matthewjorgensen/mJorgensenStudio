<%= form_for [refinery, :hero_images_admin, @hero_image] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @hero_image,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @hero_image.photo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.hero_images.admin.hero_images.hero_image'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @hero_image.title) %>
<% end -%>
