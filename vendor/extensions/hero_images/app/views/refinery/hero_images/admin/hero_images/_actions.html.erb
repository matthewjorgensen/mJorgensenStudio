<ul>
  <% if ::Refinery::HeroImages::Admin::HeroImagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.hero_images_admin_hero_images_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_hero_images_admin_hero_image_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::HeroImages::Admin::HeroImagesController.sortable? && ::Refinery::HeroImages::HeroImage.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Hero Images"),
                 refinery.hero_images_admin_hero_images_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Hero Images"),
                 refinery.hero_images_admin_hero_images_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
